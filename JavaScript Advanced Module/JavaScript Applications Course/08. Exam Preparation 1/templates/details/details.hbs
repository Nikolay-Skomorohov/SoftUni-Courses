{{> header}}
<div class="row event-details">
    <div class="col-md-12 text-center overflow-hidden">

      <img class="details-img" src={{details.eventImage}} />
      <div class="my-3 p-3">
        <h2 class="display-5">{{details.eventName}}</h2>
        <p class="infoType">Description:</p>
        <p class="event-description">{{details.eventDescription}}</p>
        <p class="infoType">Date: <small>{{details.eventDate}}</small></p>
        <p class="infoType">People interested in: <small>{{details.eventInterestedIn}}</small></p>
        <p class="infoType">Organizer: <small>{{details.eventOrganizer}}</small></p>
      </div>
        {{#if isOrganizer}}
          <a href="#edit" class="btn btn-primary btn-lg">Edit the event</a>
          <a href="#delete" class="btn btn-danger btn-lg">Close the event</a>
        {{else}}
          <a href="#join" class="btn btn-info btn-lg">Join the event</a>
        {{/if}}
    </div>
  </div>
  {{> footer}}